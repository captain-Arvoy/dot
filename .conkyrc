    # conky configuration
    #
    # The list of variables has been removed from this file in favour
    # of keeping the documentation more maintainable.
    # Check http://conky.sf.net for an up-to-date-list.
    #
    # For ideas about how to modify conky, please see:
    # http://crunchbanglinux.org/forums/topic/59/my-conky-config/
    #
    # For help with conky, please see:
    # http://crunchbanglinux.org/forums/topic/2047/conky-help/
    #
    # Enjoy! üôÇ
    ##############################################
    # Settings
    ##############################################
    background yes
    use_xft yes
    xftfont Liberation Sans:size=12
    xftalpha 1
    update_interval 1.0
    # .conkyrc ‚Äì Edited from various examples across the ‚Äònet
    # Used by Craig Watson [ http://www.cwatson.org ] on Fedora 8

    # ‚Äî Window Layout & Options ‚Äî #
    own_window yes
    own_window_transparent yes
    own_window_type desktop
    own_window_transparent yes
    own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
    double_buffer yes
    use_spacer right
    use_xft yes
    alignment top_right
    gap_x 20
    gap_y 230

    # ‚Äî Colours, Sizes, Fonts & Margins ‚Äî #
    update_interval 1.0
    maximum_width 250
    stippled_borders 3
    border_margin 9
    border_width 10
    default_color grey

    # ‚Äî Text ‚Äî #
    draw_outline no
    draw_borders no
    font monospace:size=8:weight=bold
    uppercase no
    draw_shades no

    TEXT
    ${color orange}SYSTEM INFORMATION ${hr 2}$color

    ${color white}${time %A},${time %e} ${time %B} ${time %G}${alignr}${time %H:%M:%S}
    ${color white}Machine$color $nodename ${alignr}${color white}Uptime$color $uptime
    ${color white}Kernel$color $kernel ${alignr}${color white}Arch$color $machine

    ${color orange}CPU ${hr 2}$color
    ${font Arial:bold:size=10}${color #ff9999}${execi 99999 cat /proc/cpuinfo | grep ‚Äúmodel name‚Äù -m1 | cut -d‚Äù:‚Äù -f2 | cut -d‚Äù ‚Äù -f2- | sed ‚Äòs#Processor ##‚Äô}$font$color
    ${cpugraph cpu1 25,225 000000 ff6600 } 
    ${color #ff6600}${cpubar cpu1 3,225} 

    ${color orange}TOP 5 PROCESSES ${hr 2}$color

    ${color #ff9999}PROC NAME             PID    CPU  MEM
    ${color #ffff99}1. ${top name 1}${top pid 1} ${top cpu 1} ${top mem 1}$color
    2. ${top name 2}${top pid 2} ${top cpu 2} ${top mem 2}
    3. ${top name 3}${top pid 3} ${top cpu 3} ${top mem 3}
    4. ${top name 4}${top pid 4} ${top cpu 4} ${top mem 4}
    5. ${top name 5}${top pid 5} ${top cpu 5} ${top mem 5}

    ${color orange}MEMORY & SWAP ${hr 2}$color

    ${color white}RAM$color $memperc% ${membar 6}$color
    ${color white}Swap$color $swapperc% ${swapbar 6}$color

    ${color orange}DRIVES ‚Äì FREE SPACE ${hr 2}$color

    ${color white}Mibuntu$color ${fs_free_perc /}%$alignr${fs_free /}/ ${fs_size /}
    ${fs_bar 3 /}$color

    ${color orange}Network (${addr wlp2s0}) ${hr 2}$color

    ${color white}Down:$color ${downspeed wlp2s0} KB/s${alignr}${color white}Up:$color ${upspeed wlp2s0} KB/s
    ${downspeedgraph wlp2s0 25,120 000000 00ff00} ${upspeedgraph wlp2s0 25,100 000000 ff0000}$color

